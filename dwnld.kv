<MainLay>:
	BoxLayout:
		ScrollView:
			size: [5,5]
			GridLayout:
				rows: 2
				cols: 2
				size_hint_y: None
				GridLayout:
					size_hint_y: None
					padding: 20
					spacing: 20
					rows: 3
					Label:
						text: 'Enter Movie Name'
					TextInput:
						id: movie_name
						font_size: 50
					Button:
						text: 'Submit Search'
						id: movie_search
						on_press: root.search_movie()
				Button:
					id: friends
					text: 'Friends'
					on_press: root.show_tv(friends.text)
				Button:
					id: svalley
					text: 'Svalley'
					on_press: root.show_tv(svalley.text)
				Button:
					text: 'Hello'

<SearchMovie>:
	BoxLayout:
		Label:
			text: "Starting Download"

<ErrorScreen>:
	BoxLayout:
		Label:
			font: 200
			text: "error" 
